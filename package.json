{
    "name": "Slayley's Theme",
    "description": "A theme made for Slayley.com powered by Ghost CMS",
    "demo": "https://slayley.com",
    "version": "1.0.0",
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "npx mix",
        "watch": "npx mix watch",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "John Polinski",
        "email": "therealjohnpolinski@gmail.com",
        "url": "https://github.com/microdotmatrix"
    },
    "gpm": {
        "type": "theme"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/microdotmatrix/ggSlayley.git"
    },
    "devDependencies": {
        "browser-sync-webpack-plugin": "^2.3.0",
        "fast-glob": "^3.2.11",
        "gscan": "4.22.0",
        "laravel-mix": "^6.0.43",
        "mini-css-extract-plugin": "^2.6.0",
        "postcss-custom-properties": "^12.1.7",
        "postcss-import": "^14.1.0",
        "postcss-preset-env": "^7.4.3",
        "resolve-url-loader": "^5.0.0",
        "sass-loader": "^12.1.0",
        "tailwindcss": "^3.0.23"
    },
    "dependencies": {
        "@waaark/luge": "^0.6.7-beta",
        "accoutrement": "^4.0.1",
        "fitvids": "^2.1.1",
        "fslightbox": "^3.3.1",
        "gerillass": "^1.3.0",
        "glightbox": "^3.2.0",
        "gsap": "^3.10.2",
        "imagesloaded": "^5.0.0",
        "isotope-layout": "^3.0.6",
        "jarallax": "^2.0.3",
        "jquery": "^3.6.0",
        "lightgallery": "^2.4.0",
        "open-props": "^1.3.16",
        "rolly.js": "^0.4.0",
        "shopify-buy": "^2.15.1",
        "swiper": "^8.1.0",
        "typesettings": "^4.2.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "card_assets": {
            "exclude": [
                "gallery",
                "bookmark"
            ]
        },
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 50
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    }
}
