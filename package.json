{
    "name": "ggslayley",
    "description": "Custom theme developed for Slayley.com",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=4.43.0"
    },
    "license": "MIT",
    "author": {
        "name": "John Polinski",
        "email": "therealjohnpolinski@gmail.com",
        "url": "https://github.com/microdotmatrix"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "scripts": {
        "dev": "cross-env TAILWIND_MODE=watch vite",
        "build": "cross-env TAILWIND_MODE=build vite build",
        "watch": "cross-env TAILWIND_MODE=watch vite preview",
        "deploy": "build && gulp jsmin"
    },
    "devDependencies": {
        "@babel/core": "^7.18.6",
        "@vitejs/plugin-vue": "^2.3.3",
        "autoprefixer": "10.4.4",
        "cross-env": "^7.0.3",
        "cssnano": "^5.1.7",
        "gscan": "4.27.0",
        "gulp": "^4.0.2",
        "gulp-rename": "^2.0.0",
        "gulp-uglify": "^3.0.2",
        "gulp-zip": "^5.1.0",
        "postcss": "8.4.12",
        "postcss-custom-properties": "^12.1.7",
        "postcss-easy-import": "^4.0.0",
        "postcss-import": "^14.1.0",
        "postcss-preset-env": "^7.4.3",
        "sass": "^1.53.0",
        "tailwindcss": "^3.0.23",
        "vite": "^2.9.14",
        "vite-plugin-babel": "^1.1.0",
        "vite-plugin-live-reload": "^2.1.0",
        "vite-plugin-static-copy": "^0.6.1",
        "vue": "^3.2.37",
        "vue-template-compiler": "^2.7.4",
        "webpack": "^5.73.0"
    },
    "dependencies": {
        "@vitejs/plugin-legacy": "^2.0.0",
        "@waaark/luge": "^0.6.7-beta",
        "accoutrement": "^4.0.1",
        "activate-power-mode": "^1.0.0",
        "bootstrap-icons": "^1.8.1",
        "gerillass": "^1.3.0",
        "glightbox": "^3.2.0",
        "gsap": "^3.10.2",
        "imagesloaded": "^5.0.0",
        "isotope-layout": "^3.0.6",
        "jarallax": "^2.0.3",
        "jquery": "^3.6.0",
        "lazysizes": "^5.3.2",
        "open-props": "^1.3.16",
        "pump": "^3.0.0",
        "shopify-buy": "^2.15.1",
        "swiper": "^8.1.0",
        "vite-plugin-handlebars": "^1.6.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 100,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": {
            "exclude": "bookmark"
        }
    }
}
