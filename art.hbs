{{!< default}}


<section id="art">
  {{> "heros/art"}}
</section>

<section id="art" class="xc-page">
    <article class="xc-page__content">

      {{#page}}
        {{content}}
      {{/page}}

      <div id="gallery-container" class="xc-gallery">
        <div class="xc-grid-sizer"></div>
          {{#foreach posts limit="8"}}

            {{> "cards/art"}}

          {{/foreach}}
      </div>

      <div id="gallery-container" class="xc-gallery">
        <div class="xc-grid-sizer"></div>
          {{#foreach posts from="8" to="16" limit="8"}}

            {{> "cards/art"}}

          {{/foreach}}
      </div>

    </article>
</section>

{{#contentFor "scripts"}}

  <script src="https://unpkg.com/imagesloaded@4/imagesloaded.pkgd.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.isotope/3.0.6/isotope.pkgd.min.js"></script>

  <script>
    var $grid = $('.xc-gallery').imagesLoaded( function() {
      $grid.isotope({
        itemSelector: '.xc-grid-item',
        percentPosition: true,
        stagger: 40,
        masonry: {
            columnWidth: '.xc-grid-sizer'
        }
      });
    });

    $('#isoFilters').on( 'click', '.sortFilter-button', function() {
      var filterValue = $(this).attr('data-filter');
      $grid.isotope({ filter: filterValue });
    });

    // change is-checked class on buttons
    $('#isoFilters').each( function( i, buttonGroup ) {
      var $buttonGroup = $( buttonGroup );
      $buttonGroup.on( 'click', 'button', function() {
        $buttonGroup.find('.selected').removeClass('selected');
        $( this ).addClass('selected');
      });
    });
  </script>

{{/contentFor}}