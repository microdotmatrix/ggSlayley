<div class="xc-hero" data-flex="row">
  <div class="parallax-container jarallax" data-jarallax data-video-src="mp4:{{asset "dist/video/mk-lightwarp.mp4"}}"></div>
  <div class="video-overlay"></div>
    <div class="xc-hero__wrapper">
      <div class="xc-slider">

          <article class="xc-slider__content" data-flex="row">
            <div class="xc-slider__intro-msg" data-column="4">
              {{#page}}
                {{content}}
              {{/page}}
            </div>
            <div class="xc-slider__featured-products" data-column="8">
              <div class="swiper">
                <div class="collection swiper-wrapper"></div>
              </div>
              <div class="xc-slider__nav">
                <div class="slide__nav-prev">
                  {{> "icons/utility" name="chevron-left"}}
                </div>
                <div class="slide__nav-next">
                  {{> "icons/utility" name="chevron-right"}}
                </div>
              </div>
            </div>
          </article>

      </div>
    </div>

</div>
