<footer class="xc-footer">
  <div class="xc-container" data-flex="row">
    <div class="xc-footer__nav" data-column="6">
      <nav>
        <ul>
          {{#foreach navigation}}
            <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}" role="presentation">
              <a href="{{url absolute="true"}}">{{label}}</a>
            </li>
          {{/foreach}}
        </ul>
      </nav>
    </div>
    <div class="xc-footer__social" data-column="6">
      {{> "social"}}
    </div>
  </div>
  <div class="xc-footer__colophon">
    <p>&copy;2022 Slayley.com</p>
  </div>
</footer>