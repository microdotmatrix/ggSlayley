<footer class="xc-footer">
  <div class="xc-container" data-flex="row">
    <div class="xc-footer__nav" data-column="4">
      <nav>
        <ul>
          {{#foreach navigation}}
            <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}" role="presentation">
              <a href="{{url absolute="true"}}">{{label}}</a>
            </li>
          {{/foreach}}
        </ul>
      </nav>
    </div>
    <div class="xc-footer__meta" data-column="4">
      <p>Published with <a href="https://ghost.org" target="_blank" rel="noopener">Ghost</a></p>
    </div>
    <div class="xc-footer__social" data-column="4">
      {{> "social"}}
    </div>
  </div>
</footer>